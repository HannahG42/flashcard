<% provide(:title, 'New Question') %>
<h1>New Question</h1>
<br>
<div class="row", align="center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@question, url: questions_path) do |f| %>
      <%= f.label :text %>
      <%= f.text_field :text, class: 'form-control' %>

      <%= f.label :answer %>
      <%= f.text_field :answers, class: 'form-control' %>

      <%= f.submit "Add question", class: "btn btn-primary" %>      
    <% end %>
  </div>
</div>  